@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using DoAn1_DDG_Pro.Models
@model IEnumerable<OrderModel>
@{
    ViewData["Title"] = "Order";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmins.cshtml";
}

<h1>Danh Sách Đơn </h1>


<p>@TempData["Message"]</p>
<table class="table">
    <thead>
        <tr class="table-success">
            <th>
                OrderCode   
            </th>
            <th>
                Email
            </th>
            <th>
                Order Date
            </th>
            <th>
                Order Status
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>

        @{
            int i = 0;
            string @cls = "table-primary";
        }

@foreach (var item in Model) {
            i = i + 1;
                cls = "table-primary";
            if (i % 2 == 0)
            {
                cls = "table-info";
            }
            <tr class="@cls">
            <td>
                @Html.DisplayFor(modelItem => item.OrderCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            
            <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>
                    }
                    else
                    {
                        <span class="text text-danger">Đơn hàng đã xử lý</span>
                    }
                </td>
           
            <td>
                <a asp-action="ViewOrder" asp-controller="ViewOrder" asp-route-ProductI-Code="@item.OrderCode">ViewOrder</a> |

                    <a asp-action="XoaOrder" asp-controller="Order" asp-route-ProductId="@item.OrderCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

